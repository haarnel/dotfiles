[settings]
screenchange-reload = true

[colors]
main-bg = #050505
main-fg = #eeeeee

[bar/mini]
monitor = HDMI2
monitor-fallback = eDP1
width = 100%
offset-x = 0%
offset-y = 0%
padding-left = 2
padding-right = 2
height = 45
bottom = true
radius = 0
fixed-center = true
line-size = 0
border-top-size = 0
border-bottom-size = 0
border-left-size = 0
border-right-size = 0
wm-restack = bspwm
module-margin-left = 0
background = ${colors.main-bg}
foreground = ${colors.main-fg}
border-left-color = #817F7F
border-top-color = #817F7F
border-bottom-color = #817F7F
border-right-color = #817F7F
enable-ipc = true
modules-center = bspwm
modules-left = search separator1 download upload player spotify
modules-right =  weather separator filesystem memory pulseaudio backlight battery datetime

font-0 = "mononoki Nerd Font:size=9:style=Regular;2"
font-1 = "mononoki Nerd Font:size=9:style=Regular;1"
font-2 = "mononoki Nerd Font:size=11:style=Regular;1"

## ==== BASEMODULE ====
[module/basemodule]
interval = 1
format = <label>
label-font = 1
label-padding = 1
label-background = ${colors.main-bg}
label-foreground = ${colors.main-fg}
format-overline = ${colors.main-bg}
format-underline = ${colors.main-bg}

[module/spotify]
type = custom/script
tail = true
format-prefix = "  "
format-prefix-foreground = #D3869B
format = <label>
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

[module/player]
type = custom/script
exec = echo "$(cat $XDG_CACHE_HOME/current_player)"
format = <label> ://
interval = 1
label-font = 1
format-prefix = "露"
format-prefix-padding-right = 2
format-prefix-padding-left = 7
format-prefix-font = 2
format-prefix-foreground = #769A70
click-left = playerctl_rofi

[module/separator]
type = custom/text
content = " "
content-padding = 4

[module/separator1]
type = custom/text
content = " "
content-padding = 3


[module/memory]
