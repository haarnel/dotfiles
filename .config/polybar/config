exec = newsboat -x reload; newsboat -x print-unread | awk '{ print $1 }'
interval = 43200
format-prefix = 
format-prefix-padding = 1
format-prefix-font = 5
format-prefix-foreground = #EA6221
format-prefix-underline = #EA6221
